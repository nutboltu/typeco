{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "rules": {
    "id-length": [
      2,
      {
        "min": 3,
        "max": 35,
        "properties": "never",
        "exceptions": [ "_", "cb", "$" ]
      }
    ],
    "max-len": [ 2, 120, 2 ],
    "max-params": [ 2, 3 ],
    "quote-props": 0,
    "no-console": ["error", { "allow": ["warn", "error", "dir"] }],
    "unicode-bom": 0
  }
}